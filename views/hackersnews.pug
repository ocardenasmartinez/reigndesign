doctype html
html(lang="en")
  head
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
    title= "Hackers News"
    script(src="js/script.js")
    link(rel="stylesheet", href="css/styles.css")
  body
    .container.header
      | Hackes News
    .container(style="padding-top: 5px")
        each val in news
          .row
            .col-md-7(style="float:left}")
              div.box-inline
                a
                  | #{val.story_title}&nbsp;
              div.box-inline
                | - #{val.author}
            .col-md-3.time
              | #{val.created_at}
            .col-md-2.pull-right(style="text-align: center")
              a(type="button" onclick=`deleteDocument(${JSON.stringify(val._id)})`, class="delete") delete
