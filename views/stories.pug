doctype html
html(lang="en")
  head
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
    title= "Nodejs News"
    script(src="js/script.js")
    link(rel="stylesheet", href="css/styles.css")
  body
    .container.header
      | Nodejs News
    .container(style="padding-top: 5px")
      if stories.length != 0
        each val in stories
          .row
            .col-md-8(style="float:left}")
              div.box-inline
                a(onclick=`openLink(${JSON.stringify(val.story_url)})`)
                  | #{val.story_title}&nbsp;
              div.box-inline
                | - #{val.author}
            .col-md-2.time
              | #{val.created_at}
            .col-md-2.pull-right(style="text-align: center")
              a(type="button" onclick=`deleteDocument(${JSON.stringify(val.created_at_i)})`, class="delete") delete
      else
        | No records, wait 3 secons..
        script. 
          threeSecond();
